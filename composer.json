{
  "name": "adv/4lapy",
  "description": "eshop 4lapy powered by ADV/web-engineering co.",
  "type": "project",
  "authors": [
    {
      "name": "Gripinskiy Sergey",
      "email": "gripinskiy@adv.ru"
    },
    {
      "name": "Panychev Dmitry",
      "email": "panychev@adv.ru"
    }
  ],
  "minimum-stability": "stable",
  "config": {
    "vendor-dir": "local/php_interface/vendor"
  },
  "autoload": {
    "psr-4": {
      "FourPaws\\": "local/php_interface/lib",
      "FourPaws\\Test\\": "local/php_interface/test"
    }
  },
  "extra": {
    "symfony-assets-install": "relative",
    "installer-paths": {
      "local/modules/{$name}/": [
        "type:bitrix-module"
      ]
    }
  },
  "require": {
    "adv/bitrix-tools": "^1.0",
    "andreyryabin/sprint.migration": "^2.3",
    "ci/restclientbundle": "~2.0.2",
    "codeception/codeception": "~2.3.5",
    "friendsofsymfony/rest-bundle": "~2.2.0",
    "jms/serializer-bundle": "~2.1.0",
    "nelmio/api-doc-bundle": "~3.0@beta",
    "symfony/symfony": "3.3.*",
    "twig/twig": "^1.0",
    "webarchitect609/bitrix-neverinclude": "^0.2",
    "webarchitect609/bitrix-cache": "^1.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^5.7"
  },
  "repositories": [
    {
      "type": "vcs",
      "url": "ssh://git@scm.adv.ru:7999/adv/bitrix-tools.git"
    }
  ],
  "scripts": {
    "pre-install-cmd": "\\FourPaws\\DeployScripts::installBitrixStubs",
    "pre-update-cmd": "\\FourPaws\\DeployScripts::installBitrixStubs"
  }
}
